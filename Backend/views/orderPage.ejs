
<div class="main-pizza">

    <div class="inner-container">

        <div class="order-container">

            <div class="first-step">
                1. Контактні дані
            </div>

            <div class="row">

                <div class="col-xs-12 col-md-6">

                    <div class="form-group dataGroup" id="nameInputDiv">
                        <div class="col-xs-2">
                            <div class="inputLabel">Ім'я</div>
                        </div>
                        <div class="col-xs-10">
                            <input type="text" class="form-control forInput" id="nameInput" placeholder="Ім'я Прізвище" required>
                        </div>
                    </div>

                    <div class="form-group dataGroup" id="phoneInputDiv">
                        <div class="col-xs-2">
                            <div class="inputLabel">Телефон</div>
                        </div>
                        <div class="col-xs-10">
                            <input type="text" class="form-control forInput" id="numberInput" placeholder="+380123456789" required>
                        </div>
                    </div>

                    <div class="form-group dataGroup" id="adressInputDiv">
                        <div class="col-xs-2">
                            <div class="inputLabel">Адреса</div>
                        </div>
                        <div class="col-xs-10">
                            <input type="text" class="form-control forInput" id="adressInput" placeholder="Київ, вул. Спаська, 2" required>
                        </div>
                    </div>

                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="labelInfo">
                        <div class="order-cont orderInfo">
                            Інформація про замовлення
                        </div>
                        <div class="order-cont">
                            <span class="title">
                                Приблизний час доставки:
                            </span>
                            <span id="time">
                                невідомо
                            </span>
                        </div>
                        <div class="order-cont">
                            <span class="title">
                                Адреса доставки:
                            </span>
                            <span id="deliveryAdress">
                                невідомо
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="button-cont">
                        <button id="next">
                            Далі >
                        </button>
                    </div>
                </div>

            </div>

            <div id="googleMap" class="mapsSetting">
            </div>
            <div id="liqpay"></div>

        </div>

        <% include common/pageBottom.ejs %>

    </div>

</div>


